.barrage-area {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  pointer-events: auto;
}

.barrage-tunnel {
  box-sizing: border-box;
  position: relative;
  display: flex;
  align-items: center;
  border-top: 1px solid #CCB24D;
  width: 100%;
}
.flex-item{
  width: 200rpx;
  height: 300rpx;
  font-size: 26rpx;
  background-color: red;
}
.tunnel-tips {
  display: inline-block;
  margin-left: 10px;
}

.bullet-item {
  position: absolute;
  display: flex;
  align-items: center;
  top: 0;
  left: 100%;
  white-space: nowrap;
}

.bullet-item.paused {
  background: rgb(0,0,0);
  opacity: 0.8;
  padding: 0 10px;
  z-index: 1001;
  border-radius: 16rpx;
  
}

.bullet-item_img {
  max-height: 100%;
}

.bullet-item_text {
  display: inline-block;
  margin: 0;
}

.bullet-move {
  animation: 0s linear slidein
}
/* modify */

.my-bullet{
  border: 1px solid rgba(0,0,0);
  background: rgb(0,0,0,0.4);
    padding: 0 10px;
    z-index: 1001;
    border-radius: 16rpx;
}

.bullet-text{
  font-size: 26rpx;
}

.like-img{
  margin-right: 10rpx;
  width: 35rpx;
  height: 35rpx;
}
.like-text{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 38rpx;
  font-size: 20rpx;
}

.report-img{
  margin-right: 5rpx;
  width: 35rpx;
  height: 35rpx;
}
.report-text{
  font-size: 20rpx;
}

@keyframes slidein {
  0% {
    transform: translate3d(0, 0, 0)
  }
  100% {
   transform: translate3d(-2000px, 0, 0)
  }
}