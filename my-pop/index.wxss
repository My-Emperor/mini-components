/* components/my-component/my-pop/index.wxss */
.pop-component{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}

.pop-content-mask{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0);
}
.pop-box-center{
  position: absolute;
  top: 50%;
  left: 50%;
  border-radius: 14rpx;
  padding: 40rpx;
  transform: translate(-50%,-50%);
  background-color:var(--backgroundColor);
  opacity: 0;
  z-index:1000;
  box-sizing: border-box;
}
.pop-box-left{
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  background-color:var(--backgroundColor);
  z-index:1000;
  opacity: 0;
}
.pop-box-right{
  position: absolute;
  top: 0;
  right: 0;
  width: 0;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
  background-color:var(--backgroundColor);
  z-index:1000;
}
.pop-box-bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  height:0;
  border-top-left-radius: 14rpx;
  border-top-right-radius: 14rpx;
  background-color:var(--backgroundColor);
  z-index:1000;
}
.pop-box-top{
  position: absolute;
  top: 0;
  left: 0;
  height:0;
  border-bottom-left-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
  background-color:#ccc;
  z-index:1000;
}